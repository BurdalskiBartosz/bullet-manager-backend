datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  tasks    Task[]
  notes    Note[]
  books    Book[]
}

model Token {
  id    Int    @id @default(autoincrement())
  value String
}

model Task {
  id        Int     @id @default(autoincrement())
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int
  title     String  @default("")
  content   String  @default("")
  priority  String  @default("")
  type      String  @default("")
  spendTime Int     @default(0)
  state     Boolean @default(false)
  date      String  @default("")
}

model Note {
  id      Int    @id @default(autoincrement())
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int
  content String @default("")
  type    String @default("")
  date    String @default("")
}

model Book {
  id             Int    @id @default(autoincrement())
  User           User?  @relation(fields: [userId], references: [id])
  userId         Int
  title          String @default("")
  author         String @default("")
  mark           Int    @default(0)
  cover          String @default("")
  readingsNumber Int    @default(0)
  state          String @default("to_read")
  opinion        String @default("")
}
